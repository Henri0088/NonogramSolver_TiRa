<Window x:Class="NonogramSolver.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NonogramSolver"
        mc:Ignorable="d"
        Title="Nonogram Solver" MinHeight="150" MinWidth="150" ResizeMode="NoResize" SizeToContent="WidthAndHeight"
        PreviewDragEnter="Grid_PreviewDrag" PreviewDragOver="Grid_PreviewDrag" Drop="Grid_Drop">
    <StackPanel >
        <TextBox x:Name="stateBox" IsReadOnly="True" PreviewDrop="Grid_Drop" Margin="5" />
        <Grid x:Name="wGrid" MinWidth="100" MinHeight="100" Width="auto" Height="auto" Background="Red" >
        </Grid>
    </StackPanel>
    
</Window>
